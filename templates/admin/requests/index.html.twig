{% extends 'base.html.twig' %}

{% block body_id 'admin_change_requests' %}

{% block main %}
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex justify-content-between align-items-center">
                    <h2 class="card-title mb-0">Заявки на изменения</h2>
                    <form method="get" action="{{ path('admin_change_requests_index') }}" class="d-flex gap-2">
                        <select name="userId" class="form-select">
                            <option value="0" {{ selectedUserId == 0 ? 'selected' : '' }}>Все пользователи</option>
                            {% for u in users %}
                                <option value="{{ u.id }}" {{ selectedUserId == u.id ? 'selected' : '' }}>{{ u.email }}</option>
                            {% endfor %}
                        </select>
                        <button class="btn btn-secondary" type="submit">Показать</button>
                    </form>
                </div>

                <div class="table-responsive mt-3">
                    <table class="table table-hover align-middle">
                        <thead>
                        <tr>
                            <th>Дата</th>
                            <th>Память</th>
                            <th>Отправитель</th>
                            <th>Email</th>
                            <th>Статус</th>
                            <th>Сообщение</th>
                            <th>Вложения</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for r in requests %}
                            {% if r is iterable %}
                                <tr>
                                    <td>{{ r.createdAt ? r.createdAt|date('d.m.Y H:i') : '—' }}</td>
                                    <td><a href="{{ path('person_code', {uuid: r.uuid}) }}" target="_blank">{{ r.uuid }}</a></td>
                                    <td>{{ r.requesterName ?? '—' }}</td>
                                    <td>{{ r.requesterEmail ?? '—' }}</td>
                                    <td><span class="badge bg-secondary">—</span></td>
                                    <td class="text-truncate" style="max-width: 300px;">{{ r.message ?? '—' }}</td>
                                    <td>
                                        {% if r.attachments and r.attachments|length %}
                                            {% for a in r.attachments %}
                                                <a href="{{ a }}" target="_blank">Фото {{ loop.index }}</a>{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            —
                                        {% endif %}
                                    </td>
                                </tr>
                            {% else %}
                                <tr>
                                    <td>{{ r.createdAt ? r.createdAt|date('d.m.Y H:i') : '—' }}</td>
                                    <td>
                                        {% if r.memory %}
                                            {{ r.memory.firstName }} {{ r.memory.lastName }}
                                        {% else %}—{% endif %}
                                    </td>
                                    <td>{{ r.requesterName }}</td>
                                    <td>{{ r.requesterEmail }}</td>
                                    <td><span class="badge bg-info">{{ r.status }}</span></td>
                                    <td class="text-truncate" style="max-width: 300px;">{{ r.message ?? '—' }}</td>
                                    <td>
                                        {% if r.attachments and r.attachments|length %}
                                            {% for a in r.attachments %}
                                                <a href="{{ a }}" target="_blank">Фото {{ loop.index }}</a>{% if not loop.last %}, {% endif %}
                                            {% endfor %}
                                        {% else %}
                                            —
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endif %}
                        {% else %}
                            <tr>
                                <td colspan="7" class="text-center text-muted py-4">Заявок пока нет</td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}


