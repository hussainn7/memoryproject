{% extends 'base.html.twig' %}

{% block body_id 'admin_payments' %}

{% block main %}
    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <div class="d-flex flex-column flex-md-row justify-content-between align-items-md-center">
                    <div>
                        <h2 class="card-title mb-2">Платёжная система</h2>
                        <p class="text-muted mb-0">Пополнение баланса и тестовый сценарий РобоКасса.</p>
                    </div>
                    <div class="text-md-end mt-3 mt-md-0">
                        <span class="text-muted d-block">Текущий баланс</span>
                        <span class="display-6 fw-semibold" data-balance-value>
                            {{ user.balance|number_format(2, '.', ' ') }}
                        </span>
                        <span class="text-muted">₽</span>
                    </div>
                </div>

                {% if isAdminView %}
                    <form method="get" action="{{ path('admin_payments_index') }}" class="mt-3">
                        <div class="row g-2 align-items-end">
                            <div class="col-md-6">
                                <label for="userId" class="form-label">Выбрать пользователя</label>
                                <select class="form-select" name="userId" id="userId" onchange="this.form.submit()">
                                    <option value="0" {{ selectedUserId == 0 ? 'selected' : '' }}>Все пользователи</option>
                                    {% for u in users %}
                                        <option value="{{ u.id }}" {{ selectedUserId == u.id ? 'selected' : '' }}>
                                            {{ u.email }} (баланс: {{ u.balance|number_format(2, '.', ' ') }} ₽)
                                        </option>
                                    {% endfor %}
                                </select>
                            </div>
                        </div>
                    </form>
                {% endif %}

                {{ form_start(form) }}
                <div class="row mt-4 g-3 align-items-end">
                    <div class="col-md-4">
                        {{ form_row(form.amount) }}
                    </div>
                    <div class="col-md-4">
                        <button type="submit" class="btn btn-primary w-100">
                            <i class="fa fa-credit-card me-1"></i> Пополнить баланс вручную
                        </button>
                    </div>
                    <div class="col-md-4">
                        <button type="button"
                                class="btn btn-outline-secondary w-100"
                                id="js-test-top-up"
                                data-amount="500"
                                data-token="{{ testTopUpToken }}">
                            <i class="fa fa-magic me-1"></i> Тестовое пополнение +500 ₽
                        </button>
                    </div>
                </div>
                {{ form_end(form) }}

                <div class="alert alert-info mt-4" role="alert">
                    <strong>Важно:</strong> интеграция с РобоКассой пока не активна. Кнопка тестового пополнения
                    имитирует успешный платёж и увеличивает баланс без обращения к платёжному шлюзу.
                </div>
            </div>
        </div>
    </div>

    <div class="col-12">
        <div class="card">
            <div class="card-body">
                <h3 class="card-title">История платежей{% if isAdminView and selectedUserId == 0 %} (все пользователи){% endif %}</h3>
                <div class="table-responsive">
                    <table class="table table-hover align-middle">
                        <thead>
                        <tr>
                            <th scope="col">Дата</th>
                            {% if isAdminView and selectedUserId == 0 %}
                                <th scope="col">Пользователь</th>
                            {% endif %}
                            <th scope="col">Сумма</th>
                            <th scope="col">Статус</th>
                            <th scope="col">Описание</th>
                            <th scope="col">Ссылка</th>
                        </tr>
                        </thead>
                        <tbody>
                        {% for transaction in transactions %}
                            {% set statusClass = {
                                'success': 'badge bg-success',
                                'failed': 'badge bg-danger',
                                'pending': 'badge bg-warning text-dark'
                            }[transaction.status] ?? 'badge bg-secondary' %}
                            <tr>
                                <td>{{ transaction.createdAt ? transaction.createdAt|date('d.m.Y H:i') : '—' }}</td>
                                {% if isAdminView and selectedUserId == 0 %}
                                    <td>{{ transaction.user ? transaction.user.email : '—' }}</td>
                                {% endif %}
                                <td>{{ transaction.amount|number_format(2, '.', ' ') }} ₽</td>
                                <td><span class="{{ statusClass }}">{{ ('payment.status.' ~ transaction.status)|trans }}</span></td>
                                <td>{{ transaction.message ?? '—' }}</td>
                                <td>{{ transaction.reference ?? '—' }}</td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="{% if isAdminView and selectedUserId == 0 %}6{% else %}5{% endif %}" class="text-center text-muted py-4">
                                    Платежей пока нет. Выполните пополнение баланса, чтобы увидеть записи.
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const testButton = document.getElementById('js-test-top-up');
            if (!testButton) {
                return;
            }

            testButton.addEventListener('click', function (event) {
                event.preventDefault();

                const amount = testButton.dataset.amount || 500;
                const token = testButton.dataset.token;

                fetch('{{ path('admin_payments_test_top_up') }}', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/x-www-form-urlencoded; charset=UTF-8',
                        'X-Requested-With': 'XMLHttpRequest',
                    },
                    body: new URLSearchParams({
                        amount: amount,
                        _token: token,
                    }),
                })
                    .then(async (response) => {
                        const data = await response.json().catch(() => ({ message: 'Неизвестная ошибка' }));
                        if (!response.ok) {
                            throw new Error(data.message || 'Платёж отклонён');
                        }

                        const balanceElement = document.querySelector('[data-balance-value]');
                        if (balanceElement && data.balance !== undefined) {
                            balanceElement.textContent = Number.parseFloat(data.balance).toFixed(2);
                        }

                        alert(data.message || 'Баланс успешно пополнен.');
                        window.location.reload();
                    })
                    .catch((error) => {
                        alert(error.message || 'Не удалось выполнить запрос. Попробуйте позже.');
                    });
            });
        });
    </script>
{% endblock %}

